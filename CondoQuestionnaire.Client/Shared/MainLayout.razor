@using Condo_Questionnaire.Client.Models
@inherits LayoutComponentBase
@inject IUserService UserService

<HeadContent>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</HeadContent>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    
    @if (LoggedIn)
    {
        <MudAppBar Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudText Typo="Typo.h6" Class="ml-3">Condo Questionaire</MudText>
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.Logout" aria-label="logout" OnClick="@(()=>LogOutUser())" />
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
        </MudAppBar>
        <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    }
    else
    {

        <Condo_Questionnaire.Client.Pages.LogIn.LogIn />
    }

</MudLayout>

@code {
    bool _drawerOpen = true;

    bool success;
    string[] errors = { };

    public bool LoggedIn
    {
        get 
        {
            //return UserService.User != null; 
            return true;
        }
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    
    private async Task LogOutUser()
    {
        await UserService.LogOut();
    }
}